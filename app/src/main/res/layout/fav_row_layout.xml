<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/FllContent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/FtxtSongName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="20dp"
                android:paddingRight="9dp"
                android:paddingBottom="-7dp"
                android:text="Stairway to Heaven"
                android:textColor="#212121"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/FtxtSinger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/FtxtSongName"
                android:layout_marginLeft="20dp"
                android:paddingRight="7dp"
                android:text="The Smithies"
                android:textColor="#7E7B7B" />

            <TextView
                android:id="@+id/FtxtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>